<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="odanUrr" class="com.epam.botor.domain.Jedi">
		<constructor-arg value="Odan urr" />
		<constructor-arg value="MALE" />
		<constructor-arg ref="lightSabre" />
	</bean>

	<bean id="lightSabre" class="com.epam.botor.domain.LightSabre">
		<constructor-arg value="Slicer" />
		<constructor-arg value="10" />
	</bean>
	
	<bean id="trooper" class="com.epam.botor.domain.Trooper"
		scope="prototype">
		<constructor-arg value="No name trooper" />
		<constructor-arg value="MALE" />
	</bean>
	
	<bean id="trooper2" class="com.epam.botor.domain.Trooper" factory-method="maleTrooperFactory"
		scope="prototype">
		<constructor-arg value="No name trooper 2" />
	</bean>
	
</beans>
